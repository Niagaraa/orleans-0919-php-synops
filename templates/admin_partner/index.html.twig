{% extends 'layout_admin.html.twig' %}

{% block title %}Partenaires{% endblock %}

{% block body %}

    {% include '_backToTop.html.twig' %}

    <div class="container-content">
        <h1 class="title">Partenaires</h1>

        <div class="container admin-partners">

            <a href="{{ path('partner_new') }}">
                <button class="btn btn-primary"><i class="fas fa-plus"></i> Ajouter</button>
            </a>

            {% for partner in partners %}
                <div class="card mb-3 mt-3" style="max-width: 650px;">
                    <div class="row no-gutters bg-light">
                        <div class="col-md-4">
                            {% if partner.filenamePartner %}
                                <img src="{{ vich_uploader_asset(partner, 'partnerFile') }}" alt="partner"
                                     class="img-partner">
                            {% endif %}
                        </div>
                        <div class="col-md-8">
                            <div class="card-body d-flex justify-content-center">
                                <h3 class="card-title ">{{ partner.name }}</h3>
                            </div>

                            <div class="d-flex justify-content-center align-items-center">
                                <a href="{{ path('partner_edit', {'id': partner.id}) }}">
                                    <button class="btn align-text-bottom text-primary"><i class="fas fa-pen fa-2x"></i>
                                    </button>
                                </a>

                                <div class="">
                                    {{ include('admin_partner/_delete_form.html.twig') }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <h2 class="m-5">Aucun partenaire Ã  afficher actuellement.</h2>
            {% endfor %}
        </div>
    </div>
{% endblock %}

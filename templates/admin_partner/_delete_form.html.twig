<form method="post" action="{{ path('partner_delete', {'id': partner.id}) }}" onsubmit="return confirm('Voulez vous supprimer ce partenaire ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ partner.id) }}">
    <button class="btn text-danger fa-2x"><i class="fas fa-trash m-2"></i></button>
</form>

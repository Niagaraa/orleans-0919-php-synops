<form method="post" action="{{ path('partner_delete', {'id': partner.id}) }}"
      onsubmit="return confirm('Voulez-vous supprimer ce partenaire ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ partner.id) }}">
    <button class="btn btn-danger btn-secret mb-5 mt-4"><i class="fas fa-trash mr-2"></i> Supprimer</button>
</form>

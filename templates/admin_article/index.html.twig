{% extends 'base.html.twig' %}

{% block title %}Liste des articles{% endblock %}

{% block body %}
<div class="container-fluid">
    <h1 class="m-5">Liste des articles</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Content</th>
                <th>Picture</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.title }}</td>
                <td>{{ article.content }}</td>
                <td>{{ article.picture }}</td>
                <td>{{ article.date ? article.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <div class="d-flex justify-content-around">
                        <a href="{{ path('article_show', {'id': article.id}) }}">show</a>
                        <a href="{{ path('article_edit', {'id': article.id}) }}">edit</a>
                        {% include 'admin_article/_delete_form.html.twig' %}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="m-5 d-flex justify-content-start">
        <div class="adminAddButton">
            <a href="{{ path('article_new') }}">
                <button class="btn btn-primary">Cr√©er un nouvel article</button>
            </a>
        </div>
    </div>
</div>

{% endblock %}

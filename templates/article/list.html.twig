{% extends 'layout.html.twig' %}

{% block title %}Toutes nos actualités{% endblock %}

{% block body %}

    {% include '_backToTop.html.twig' %}

    <div class="container-content">
        <h1 class="title">Liste des articles</h1>
    </div>

    <div class="container-fluid articles">
        <div class="row no-gutters">
            <div class="col-lg-12 col-xs-1">
                <div class="row justify-content-around d-flex flex-wrap">
                    {% for article in articles %}
                        <div class="card">
                            <div class="card-body">
                                <img src="https://via.placeholder.com/640x360" class="card-img-top" alt="image de l'article">
                                <h2 class="card-title">{{ article.title }}</h2>
                                <p class="card-text">{{ article.content|truncate(500,true)|raw }}</p>
                                <p class="card-text date">
                                    {{ article.date ? article.date|date('d/m/Y H:i') : '' }}
                                </p>
                                <a href="{{ path('article_show', {'slug': article.slug}) }}" class="btn btn-primary">Lire
                                    l'article complet</a>
                            </div>
                        </div>
                    {% else %}
                        Pas d'actualités pour le moment.
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>

    <div class="btn-retour">
        <a href="{{ path('index') }}">
            <button type="button" class="btn btn-dark btn-lg m-5"> Retour Accueil</button>
        </a>
    </div>
{% endblock %}

{% extends 'layout.html.twig' %}

{% block body %}
    <div class="container-fluid container-title container-article">
        <div class="row no-gutters">
            <div class="col-lg-12 col-xs-1">
                <h1 class="title">Liste des articles</h1>
            </div>
        </div>
    </div>
    <div class="container-fluid articles">
        <div class="row no-gutters">
            <div class="col-lg-12 col-xs-1">
                <div class="row-article justify-content-around d-flex flex-wrap">
                    {% for article in articles %}
                        <div class="card" style="width: 30rem;">
                            <div class="card-body">
                                <img src="https://via.placeholder.com/640x360" class="card-img-top" alt="article image">
                                <h5 class="card-title">{{ article.title }}</h5>
                                <p class="card-text">{{ article.content }}</p>
                                <p class="card-text date">
                                    {{ article.date ? article.date|date('d/m/Y H:i') : '' }}
                                </p>
                                <a href="{{ path('article_show', {'slug': article.title}) }}" class="btn btn-primary">Lire l'article complet</a>
                            </div>
                        </div>
                        {% else %}
                            Pas d'actualit√©s pour le moment.
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>

    <div class="btn-retour">
        <a href="{{ path('index') }}">
            <button type="button" class="btn btn-dark btn-lg m-5"> Retour Accueil</button>
        </a>
    </div>
{% endblock %}

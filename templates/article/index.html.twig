{% extends 'layout.html.twig' %}

{% block body %}
    <div class="container-fluid container-title container-article">
        <div class="row no-gutters">
            <div class="col-lg-12 col-xs-1">
                <h1 class="title">Liste des articles</h1>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row no-gutters">
            <div class="col-lg-12 col-xs-1">
                <div class="row-article justify-content-around d-flex flex-wrap">
                    {% for article in articles %}
                        <div class="card" style="width: 30rem;">
                            <div class="card-body">
                                <img src="https://via.placeholder.com/640x360" class="card-img-top" alt="article image">
                                <h2 class="card-title">{{ article.title }}</h2>
                                <p class="card-text">{{ article.content }}</p>
                                <p class="card-text">
                                    <small class="text-muted">
                                        {{ article.date ? article.date|date('d/m/Y H:i') : '' }}
                                    </small>
                                </p>
                                <a href="#" class="btn btn-primary">Lire l'article</a>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>

    <div class="btn-retour">
        <a href="/{{ path('index') }}">
            <button type="button" class="btn btn-dark btn-lg m-5"> Retour Accueil</button>
        </a>
    </div>
{% endblock %}

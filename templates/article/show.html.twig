{% extends 'layout.html.twig' %}

{% block body %}
    <div class="container-fluid container-title container-article">
        <div class="row no-gutters">
            <div class="col-lg-12 col-xs-1">
                <h1 class="title"> {{ article.title }}</h1>
            </div>
        </div>
    </div>
    <div class="container-fluid articles">
                <div class="row-article justify-content-around d-flex flex-wrap">
                    <div class="card" style="width: 90rem;">
                        <div class="card-body">
                            <img src="https://via.placeholder.com/640x360" class="card-img-top" alt="article image">
                            <h5 class="card-title">{{ article.title }}</h5>
                            <p class="card-text">{{ article.content }}</p>
                            <p class="card-text date">
                                {{ article.date ? article.date|date('d/m/Y H:i') : '' }}
                            </p>
                        </div>
                    </div>
                </div>
    </div>

    <div class="btn-retour">
        <a href="{{ path('index') }}">
            <button type="button" class="btn btn-dark btn-lg m-5"> Retour </button>
        </a>
    </div>
{% endblock %}

<div class="container-fluid container-title">
    <div class="row no-gutters">
        <div class="col-lg-12 col-xs-1">
            <h1 class="title">Nos dernières actualités </h1>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row no-gutters">
        <div class="col-lg-12 col-xs-1">

            <div class="justify-content-around d-flex flex-wrap">

                {% for article in articles %}


                    <div class="card">
                        <div class="card-body">

                            {% if article.section.name is defined and article.section.color is defined %}
                                <div class="d-flex flex-column">
                                    <div class="d-flex justify-content-end mt-n2 mb-2">
                                        <img src="{{ asset('build/images/BOUSSOLE_BLANC.png') }}"
                                             alt="{{ article.section.name }}"
                                             class="section-color rounded-circle"
                                             style="background-color: {{ article.section.color }}">
                                    </div>

                                    <div class="badge d-flex justify-content-end mb-2">
                                        <div class="section">{{ article.section.name }}</div>
                                    </div>
                                </div>
                            {% endif %}

                            {% if article.filename %}
                                <img src="{{ vich_uploader_asset(article, 'pictureFile') }}" alt="image article"
                                     class="card-img-top">
                            {% endif %}
                            <h2 class="card-title">{{ article.title }}</h2>
                            <p class="card-text">{{ article.content|striptags|truncate(250,true)|raw }}</p>
                            <p class="date card-text">{{ article.date|date('d/m/Y H:i') }}</p>
                            <a href="{{ path('article_show', {'slug': article.slug }) }}" class="card-link btn btn-warm-color">
                                <i class="far fa-eye mr-2"></i> Lire l'article complet
                            </a>
                        </div>
                    </div>

                {% endfor %}
            </div>

        </div>
    </div>
</div>

<div class="all-articles">
    <a href="{{ path('article_list', {'page':1}) }}">
        <button type="button" class="btn-lg m-5 btn-secondary border-0">
            <i class="fas fa-share mr-2"></i> Liste des articles
        </button>
    </a>
</div>

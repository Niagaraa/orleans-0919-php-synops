        <h2 class="title">Membres</h2>

        {% for user in users %}
            <div class="container-fluid">

                <div class="row member-row mt-5 m-2">
                    <div class="entreprise d-flex align-items-center">
                        <h2 class="ml-3 align-middle d-inline">Entreprise XXXXXXXXX</h2>
                    </div>


                    <div class="col-xl-3 ml-3">
                        <p>Activité</p>
                        <p>aaa{{ user.email }}</p>

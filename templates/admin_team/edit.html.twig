{% extends 'layout_admin.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block title %}Modifier un membre{% endblock %}

{% block body %}
<div class="container-content">

    <h1 class="title">Modifier un membre</h1>

    <div class="container admin-container">
        <div class="AdminForm">
            {{ form_start(form) }}
            {{ form_row(form.firstname) }}
            {{ form_row(form.lastname) }}
            {{ form_row(form.email) }}
            {{ form_row(form.description) }}
            {{ form_row(form.imageFile) }}
            <div class="d-flex justify-content-center">
                <div class="adminUpdateButton">
                    {{ include('admin_team/_form.html.twig', {'button_label': 'Sauvegarder'}) }}
                </div>
            </div>
            <hr/>
            {{ form_end(form) }}
            <div class="d-flex justify-content-end">
                <a href="{{ path('team_index') }}">
                    <button type="button" class="btn btn-light">Revenir à la page de l'équipe</button>
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}

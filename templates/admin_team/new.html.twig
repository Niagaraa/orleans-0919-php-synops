{% extends 'layout_admin.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}


{% block title %}Création d'un nouveau membre {% endblock %}

{% block body %}
    <div class="container-content">
        <h1 class="title">Ajouter un nouveau membre</h1>


        <div class="container admin-container">

            <a href="{{ path('team_index') }}">
                <button type="button" class="btn btn-secondary mb-4"><i class="fas fa-reply mr-2"></i> Retour à la page
                    d'équipe
                </button>
            </a>

            <div class="AdminForm">
                {{ form_start(form) }}
                {{ form_row(form.firstname) }}
                {{ form_row(form.lastname) }}
                {{ form_row(form.email) }}
                {{ form_row(form.description) }}
                {{ form_row(form.imageFile) }}
                <div class="d-flex justify-content-center">
                    <button class="btn btn-primary mb-5">Ajouter le membre</button>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}

<form method="post" action="{{ path('team_delete', {'id': team.id}) }}" onsubmit="return confirm('Voulez-vous vraiment supprimer ce membre ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ team.id) }}">
    <button class="btn text-danger"><i class="fas fa-trash"></i></button>
</form>

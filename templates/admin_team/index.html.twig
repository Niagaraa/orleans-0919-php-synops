{% extends 'layout_admin.html.twig' %}

{% block title %}Equipe{% endblock %}

{% block body %}
    <h1>Team index</h1>

    <div class="container-content">

        <h1 class="title">L'équipe</h1>

        <div class="container  img-fluid">

            <div class="m-5 d-flex justify-content-start">
                <a href="{{ path('team_new') }}">
                    <button class="btn btn-primary"><i class="fas fa-plus"></i> Ajouter un membre à l'équipe</button>
                </a>
            </div>

            {% for team in teams %}
                <div class="card mb-3 mt-3">
                    <div class="row no-gutters bg-light">
                        <div class="col-2">
                            {% if team.imagename %}
                                <img src="{{ vich_uploader_asset(team, 'imageFile') }}"  alt="image equipe" class="card-img" >
                            {% endif %}
                        </div>
                        <div class="col-10">
                            <div class="card-body d-flex justify-content-center mt-3 mb-3">
                                <h2 class="card-title ">{{ team.firstname }} {{ team.lastname }}</h2>
                            </div>
                            <div class="d-flex  justify-content-center align-items-center flex-column">
                                <a href="{{ path('team_edit', {'id': team.id}) }}" class="btn btn-primary m-5"><i class="fas fa-pen mr-2"></i> Modifier</a>
                                {% include 'admin_team/_delete_form.html.twig' %}
                            </div>
                        </div>
                    </div>
                </div>
                {% else %}
                <div class="m-5">Pas d'enrégistrement de membre d'équipe.</div>
            {% endfor %}
        </div>
    </div>

{% endblock %}

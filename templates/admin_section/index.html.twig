{% extends 'layout_admin.html.twig' %}

{% block title %}Sections{% endblock %}

{% block body %}
    <div class="container-content">
        <h1 class="title">Sections des actualités</h1>

        <div class="container admin-section">

            <a href="{{ path('section_new') }}">
                <button class="btn btn-primary"><i class="fas fa-plus"></i> Ajouter une section</button>
            </a>

            <a href="{{ path('article_index') }}">
                <button type="button" class="btn btn-secondary ml-5"><i class="fas fa-reply mr-2"></i> Retour aux actualités
                </button>
            </a>

            {% for section in sections %}
                <div class="card mb-3 mt-3">
                    <div class="row no-gutters bg-light">

                        <div class="col-md-8">
                            <div class="card-body d-flex justify-content-center">
                                <h3 class="card-title ">{{ section.name }}</h3>
                            </div>
                        </div>

                        <div class="d-flex flex-column justify-content-center align-items-center">
                            <a href="{{ path('section_edit', {'id': section.id}) }}">
                                <button class="btn align-text-bottom btn-primary d-block m-1">
                                    <i class="fas fa-pen mr-2"></i> Modifier
                                </button>
                            </a>

                            <div class="m-1">
                                {{ include('admin_section/_delete_form.html.twig') }}
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <h2 class="m-5">Aucune section à afficher actuellement.</h2>
            {% endfor %}
        </div>
    </div>
{% endblock %}

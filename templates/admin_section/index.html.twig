{% extends 'layout_admin.html.twig' %}

{% block title %}Sections{% endblock %}

{% block body %}
    <div class="container-content">
        <h1 class="title">Sections des actualit√©s</h1>

        <div class="container admin-section">

            <a href="{{ path('section_new') }}">
                <button class="btn btn-primary"><i class="fas fa-plus"></i> Ajouter</button>
            </a>

            {% for section in sections %}
                <div class="card mb-3 mt-3" style="max-width: 650px;">
                    <div class="row no-gutters bg-light">

                        <div class="col-md-8">
                            <div class="card-body d-flex justify-content-center">
                                <h3 class="card-title ">{{ section.name }}</h3>
                            </div>
                        </div>

                        <div class="d-flex justify-content-center align-items-center">
                            <a href="{{ path('section_edit', {'id': section.id}) }}">
                                <button class="btn align-text-bottom text-primary"><i class="fas fa-pen fa-2x"></i>
                                </button>
                            </a>

                            <div class="">
                                {{ include('admin_section/_delete_form.html.twig') }}
                            </div>
                        </div>

                    </div>
                </div>
            {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endfor %}


        </div>
    </div>
{% endblock %}

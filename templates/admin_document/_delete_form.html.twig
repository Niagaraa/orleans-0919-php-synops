<form method="post" action="{{ path('document_delete', {'id': document.id}) }}" onsubmit="return confirm('Voulez vous supprimer cet objet ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ document.id) }}">
    <button class="btn text-danger fa-2x"><i class="fas fa-trash pl-2 mb-3"></i></button>
</form>

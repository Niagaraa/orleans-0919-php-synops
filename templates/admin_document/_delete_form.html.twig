<form method="post" action="{{ path('document_delete', {'id': document.id}) }}" onsubmit="return confirm('Voulez vous supprimer ce document ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ document.id) }}">
    <button class="btn btn-danger ml-2"><i class="fas fa-trash mr-2"></i> Supprimer</button>
</form>

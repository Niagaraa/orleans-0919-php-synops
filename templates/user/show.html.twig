{% extends 'layout.html.twig' %}

{% block body %}
    <div class="container-fluid container-title container-article">
        <div class="row no-gutters">
            <div class="col-lg-12 col-xs-1">
                <h1 class="title">Espace membre</h1>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="card mb-3 border-none">
            <div class="card-header">
                <h2>Entreprise -{{ user.company }}</h2>
            </div>
            <div class="card-body">
                <h5 class="card-title">{{ user.name }}</h5>
                <p class="card-text"> {{ user.email }}</p>
                <p class="card-text"> {{ user.phone }}</p>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="card mb-3 border-none">
            <div class="card-header">
                <h2> Mes Outils</h2>
            </div>
            <div class="card-body">
                <p class="card-text">
                    {% for category in user.categories %}
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="inlineCheckbox3" value="option3" disabled>
                    <label class="form-check-label" for="inlineCheckbox3">{{ category.sector }}</label>
                </div>
                    {% endfor %}
                </p>
            </div>
        </div>
    </div>

    <div class="btn-retour">
        <a href="{{ path('index') }}">
            <button type="button" class="btn btn-dark btn-lg m-5"> Retour</button>
        </a>
    </div>
{% endblock %}
